#include <stdio.h>
#include <string.h>

void main() {
    int i,j,n;
    int mat1[50][50],mat2[50][50];
    printf("enter the value of n: ");
    scanf("%d",&n);
    printf("Matrix1:-\n");
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("element [%d][%d]: ",i,j);
            scanf("%d",&mat1[i][j]);
        }
    }

    printf("Matrix2:-\n");
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("element [%d][%d]: ",i,j);
            scanf("%d",&mat2[i][j]);
        }
    }
    
    printf("Sum of the matrix: \n");
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("%d ",mat1[i][j]+mat2[i][j]);
        }
        printf("\n");
    }
}
