#include <stdio.h>

int main() 
{
    int n1,n2;
    char op;
    
    printf("Enter the number 1: ");
    scanf("%d",&n1);
    
    printf("Enter the number 2: ");
    scanf("%d",&n2);
    
    printf("Enter the operator: ");
    scanf("\n%c",&op);
    
    if(op=='+')
    {
        printf("Sum of the number is: %d",n1+n2);
    }
    else if(op=='-')
    {
        printf("Difference of the number is: %d",n1-n2);
    }
    else if(op=='*')
    {
        printf("product of the number is: %d",n1*n2);
    }
    else if(op=='/')
    {
        printf("Division of the number is: %d",n1/n2);
    }
    else if(op=='%')
    {
        printf("Modulo of the number is: %d",n1%n2);
    }
    else
        {
            printf("You entered an invalid operator");
        }
    return 0;
}
